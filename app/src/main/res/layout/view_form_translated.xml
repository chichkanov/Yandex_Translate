<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/translate_form_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_translated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/btn_translated_fav"
        android:text="Так будет выглядеть перевод слова в приложении"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/btn_translated_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_fav_custom"
        android:contentDescription="@string/translate_fav_btn" />

</RelativeLayout>