<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context="com.chichkanov.yandex_translate.TranslateFragment">

    <com.chichkanov.yandex_translate.SwitchLanguageView
        android:id="@+id/view_switch_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.chichkanov.yandex_translate.TranslateFormView
        android:id="@+id/view_translate_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/translate_form_margin">

    </com.chichkanov.yandex_translate.TranslateFormView>

    <com.chichkanov.yandex_translate.TranslatedFormView
        android:id="@+id/view_translated_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/translated_form_margin"
        android:layout_marginLeft="@dimen/translated_form_margin"
        android:layout_marginRight="@dimen/translated_form_margin"
        android:visibility="gone" />

</LinearLayout>
